<container>
    <div class="row row-cols-3 mx-auto mt-3" style="width: 800px" id="camera_pannel">
        {{#each camera_list}}
        <div class="col mb-3">
            <div class="card border border-dark border-2">
                <img src="{{this.image}}" width="120" height="120" alt="..." class="mx-auto">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">{{this.name}}</h5>
                    <p class="card-text"> $NT {{this.price}} / 1天</p>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#{{this.name}}">
                        租借{{this.name}}
                    </button>
                </div>
            </div>
        </div>
        <div class="modal fade" id="{{this.name}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h5 class="modal-title" id="exampleModalLabel">{{this.name}}</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action="/show_select" class="my-2 mx-auto text-center" style="width:125px;">
                            <img src="{{this.image}}" width="120" height="120" alt="..." class="mx-auto">
                            <div class="form-check my-3">
                                <input class="form-check-input" type="radio" name="flexRadioDefault"
                                    id="flexRadioDefault1">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    {{this.categoryFirst}}
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" name="flexRadioDefault"
                                    id="flexRadioDefault1">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    {{this.categorySecond}}
                                </label>
                            </div>
                            <div class="form-check mb-3">
                                <input class="form-check-input" type="radio" name="flexRadioDefault"
                                    id="flexRadioDefault1">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    {{this.categoryThird}}
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</container>
