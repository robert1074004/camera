
    <div class=" mx-auto mt-2"  id="camera_panel">
        {{#each equipments}}
        <div class=" p-3" style="width:300px;">
            <div class="card border border-dark border-2">
                <img src="{{this.image}}" width="120" height="120" alt="..." class="mx-auto">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">{{this.name}}</h5>
                    <p class="card-text"> $NT {{this.price}} / 1天</p>
                    <a href="/equipments/show/{{this.id}}" class="btn btn-primary" >
                        租借{{this.name}}
                    </a>   
                </div>
            </div>
        </div>
        {{/each}}
    </div>

