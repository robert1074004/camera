<container>
    <div class="card text-center mx-auto my-5" style="width : 600px;">
        <div class="card-header">
            <h4>加入會員</h4>
        </div>
        <div class="card-body">
            <form action="/users/sign_in" method="POST">
                <div class="row mb-3">
                    <label for="inputName3" class="col-sm-2 col-form-label">Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="name"id="inputName3" name="name" required>
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputAccount3" class="col-sm-2 col-form-label">Account</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="account" id="inputAccount3" name="account" required> 
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
