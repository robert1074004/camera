<div class="container-sm">
    <div class="card text-center mx-auto my-5" id="category_pannel">
        <div class="card-header">
            <h4>選擇取貨日期</h4>
        </div>
        <div class="card-body">
            {{> message}}
            <h5 class="card-title">{{camera.name}}</h5>
            <img src="{{camera.image}}" width="120" length="120"  alt="..." class="mx-auto">
            <form action="/records/show/{{camera.name}}" method="POST">
                <p class="card-text mt-2">取貨日期需與今天相隔一天</p>
                <input type="datetime-local" name="time" required>
                <button type="submit" class="btn btn-secondary btn-sm">確定日期</button>
            </form>   
        </div>

    </div>
   
</div>